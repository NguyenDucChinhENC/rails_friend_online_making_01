<div id="comment_form">
  <div class="col-md-5">
    <div class="post-content">
      <div class="post-detail">
        <%= render "comments/form", object: @support.new_comment%>
      </div>
    </div>
    <% @support.comments.each do |cmt| %>
      <div class="post-content">
        <div class="post-container">
          <%= image_tag("users/user-5.jpg", :class => "profile-photo-md pull-left") %>
          <div class="post-detail">
            <div class="user-info">
              <h5><a href="timeline.html" class="profile-link"><%=link_to cmt.name, user_path(cmt.user_id) %></a> <span class="following"><%= t ".following" %></span></h5>
              <p class="text-muted"><%= time_ago_in_words(cmt.created_at) %> ago</p>
            </div>
            <div class="line-divider"></div>
            <div class="post-text">
              <p><%= cmt.body %><i class="em em-anguished"></i> <i class="em em-anguished"></i> <i class="em 
                em-anguished"></i></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
