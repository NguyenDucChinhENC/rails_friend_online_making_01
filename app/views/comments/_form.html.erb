<%= form_for @support.new_comment, remote: true do |f| %>
  <%= render "shared/error", object: @support.new_comment %>

  <%= f.hidden_field :blog_id, value: @support.blog[:id] %>

  <%= f.text_area :body, class: "form-control" %>
  <br>
  <%= f.submit t("submit"), class: "btn btn-primary pull-right" %>
  <br>
<% end %>
